{
  "name": "holochain-rad-tools-phase-2",
  "version": "0.1.0",
  "description": "The second tier of RAD tools, automating a UI GraphQL and DNA generation based on a JSON schema file.",
  "main": "index.js",
  "scripts": {
    "generate:happ": "npm run clear-happ && npm run generate:ui && npm run hc:generate-dna",
    "generate:ui": "node src/ui-setup/scripts/generate-ui",
    "ui:generate-clean": "rm -rf ui-src/*",
    "ui:start": "cd ui-src && npm run start",
    "hc:generate-dna": "node src/dna-setup/scripts/generate-dna",
    "hc:package": "cd dna-src && hc package",
    "hc:test": "cd dna-src && RUST_BACKTRACE=1 HC_IGNORE_SIM2H_URL_PROPERTY=true hc test | node test/node_modules/faucet/bin/cmd.js",
    "hc:start": "holochain -c conductor-config.toml",
    "start": "npm run hc:start && npm rn ui:start",
    "clear-happ": "rm -rf dna-src/ ui-src/"
  },
  "devDependencies": {},
  "dependencies": {
    "chalk": "^4.0.0",
    "lodash": "^4.17.15",
    "ncp": "^2.0.0",
    "toml": "^3.0.0",
    "util": "^0.12.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/holochain/RAD-Tools-Phase-2.git"
  },
  "keywords": [
    "Holochain",
    "GraphQL",
    "React",
    "happ",
    "RAD",
    "Phase 2",
    "Tool"
  ],
